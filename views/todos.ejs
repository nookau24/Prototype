<body>

    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="stuffDetail">
            <a class="btn" href="/">
                <i class="material-icons home">home</i>
                Return to Home
            </a>
            <a class="btn-small waves-effect waves-light" href="/inventory">
                <i class="material-icons left">arrow_back</i>Add/Remove from your list!</a>
            <h1>Details of To Dos:</h1>
            <ul class="collapsible">
                <li>
                  <div class="collapsible-header"><i class="material-icons">looks_one</i>Make your bed</div>
                  <div class="collapsible-body"><span>
                    <table>
                        <tr>
                            <th>Time:</th>
                            <td><%= time %></td>
        
                        </tr>
                        <tr>
                            <th>Difficulty:</th>
                            <td><%= difficulty %></td>
        
                        </tr>
                        <tr>
                            <th>Instructions:</th>
                            <td><%= instructions %></td>
        
                        </tr>
                        <tr>
                            <th>Key Focus Area(s):</th>
                            <td><%= keyfocusarea %></td>
                        </tr>
                        <tr>
                            <th>Description:</th>
                            <td>
                                <%= description %>
                            </td>
                        </tr>
                    </table>
                  </span></div>
                </li>
                <li>
                  <div class="collapsible-header"><i class="material-icons">looks_two</i>Take out the trash</div>
                  <div class="collapsible-body"><span>
                    <table>
                        <tr>
                            <th>Time:</th>
                            <td><%= time %></td>
        
                        </tr>
                        <tr>
                            <th>Difficulty:</th>
                            <td><%= difficulty %></td>
        
                        </tr>
                        <tr>
                            <th>Instructions:</th>
                            <td><%= instructions %></td>
        
                        </tr>
                        <tr>
                            <th>KeyFocusArea(s):</th>
                            <td><%= keyfocusarea %></td>
                        </tr>
                        <tr>
                            <th>Description:</th>
                            <td>
                                <%= description %>
                            </td>
                        </tr>
                    </table>
                  </span></div>
                </li>
                <li>
                  <div class="collapsible-header"><i class="material-icons">looks_3</i>Cook spaghetti dinner</div>
                  <div class="collapsible-body"><span>
                    <table>
                        <tr>
                            <th>Time:</th>
                            <td><%= time %></td>
        
                        </tr>
                        <tr>
                            <th>Difficulty:</th>
                            <td><%= difficulty %></td>
        
                        </tr>
                        <tr>
                            <th>Instructions:</th>
                            <td><%= instructions %></td>
        
                        </tr>
                        <tr>
                            <th>Key Focus Area(s):</th>
                            <td><%= keyfocusarea %></td>
                        </tr>
                        <tr>
                            <th>Description:</th>
                            <td>
                                <%= description %>
                            </td>
                        </tr>
                    </table>
                  </span></div>
                </li>
              </ul>
        </div>

        <div class="section" id="stuffControls">
            <a class="btn-large waves-effect waves-light orange left modal-trigger" href="/inventory">
                <i class="material-icons right">edit</i>
                Edit
            </a>
            <a class="btn-large waves-effect waves-light red right" href="/inventory/todos/<%= id %>/delete">
                <i class="material-icons right">delete</i>
                Delete
            </a>
        </div>


        <div class="modal" id="stuffEdit">

            <div class="modal-content">

                <h2>Edit item:</h2>
                <form method="post" action="/inventory/todos/<%= id%>">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="nameInput">Item:</label>
                            <input type="text" name="name" id="nameInput" class="validate" data-length="32" value="<%= item%>" required>
                        </div>
                        <div class="input-field col s6">
                            <label for="quantityInput">Time</label>
                            <input type="time" name="time" id="timeInput" value=<%= time%> required>
                        </div>
                        <div class="input-field col s6">
                            <label for="quantityInput">Difficulty</label>
                            <!--<input type="time" name="quantity" id="quantityInput" value=1 required>-->
                                <!-- Dropdown Trigger -->
                            <br></br>
                            <a class='dropdown-trigger btn' href='#dropdown1'>Choose</a>

                            <!-- Dropdown Structure -->
                            <ul id='dropdown1' class='dropdown-content'>
                                <li><a href="#!">Easy</a></li>
                                <li class="divider" tabindex="-1"></li>
                                <li><a href="#!">Medium</a></li>
                                <li class="divider" tabindex="-1"></li>
                                <li><a href="#!">Hard</a></li>
                                
                                
                        </div>
                        <div class="input-field col s6">
                            <label for="quantityInput">Instructions</label>
                            <input type="url" name="instructions" id="instructionsInput" value="<%= instructions%>"not
                                required>
                        </div>
                        <div class="input-field col s6">
                            <label for="quantityInput">Key Focus Area(s)</label>
                            <input type="text" name="keyfocusarea" id="keyfocusareaInput" value="<%= keyfocusarea%>"not
                                required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="descriptionInput">Item Description:</label>
                            <input type="text" name="description" id="descriptionInput" value="<%= description%>"data-length="100">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn waves-effect waves-light " type="submit">
                            <i class="material-icons right">send</i>
                            Submit
                        </button>
                        <button class="modal-close waves-effect waves-green btn-flat">Never Mind</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>

</body>

</html>